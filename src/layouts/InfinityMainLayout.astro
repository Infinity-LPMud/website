---
import "../../styles/global.css";
import Navbar from "../components/Navbar.astro";
import SEOHead from "../components/SEOHead.astro";
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=IM+Fell+English:ital@0;1&display=swap"
      rel="stylesheet"
    />

    <SEOHead title={title} />
  </head>
  <body>
    <Navbar />
    <main class="bg-paper-bg min-h-screen bg-opacity-75">
      <div class="relative pt-28 mx-2 px-6 md:px-1 text-sm">
        <slot />
      </div>
    </main>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
