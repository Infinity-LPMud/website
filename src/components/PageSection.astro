---
import { Image, Picture } from "astro:assets";

interface Props {
  title?: string;
  img?: {
    src: any;
    alt: string;
  };
}
const { title, img } = Astro.props;
const sizeProps =
  typeof img?.src === "string" ? { height: 500, width: 500 } : {};
---

{title && <h1 class="header-style section-header">{title}</h1>}
{
  img && (
    <div class="mb-1 w-full">
      <Picture src={img.src} alt={img.alt} class="mx-auto" {...sizeProps} />
    </div>
  )
}

<p class="text-xl">
  <slot />
</p>
