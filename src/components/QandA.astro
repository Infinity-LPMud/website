---
interface Props {
  question: string;
}
const { question } = Astro.props;
---

<div class="reveal qa-block my-8 border-l-2 border-[rgba(212,162,78,0.3)] pl-5">
  <h3 class="font-medieval text-[#d4a24e] text-2xl mb-3 leading-tight">
    {question}
  </h3>
  <div class="qa text-xl leading-relaxed">
    <slot />
  </div>
</div>
